@model CarDealership.Models.Tables.Contact

@{
    ViewBag.Title = "Contact Us";
}

<h2>Contact Us</h2>
<div class="row">
    <div class="col-lg-6">
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary()
            <div id="ContactForm">
                <div class="form-group">
                    <label>Name</label>
                    @Html.TextBoxFor(i=>i.ContactName, new { @class="form-control" })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(i => i.ContactEmail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    @Html.TextBoxFor(i => i.ContactPhone, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Message</label>
                    @Html.TextAreaFor(i=>i.Message, new { @class = "form-control" })
                </div>
                <button class="btn btn-light btn-outline-dark">Submit</button>
            </div>
        }
    </div>
    <div class="col-lg-6">
        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12532.402450156862!2d-85.7483178!3d38.2539725!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xbc6e2b589c85088f!2sThe+Software+Guild!5e0!3m2!1sen!2sus!4v1525985194375" width="400" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
        <div class="col-12 mb-3 mt-3 p-0">
            <div class="col-12">
                252 E Market St
            </div>
            <div class="col-12">
                <p>Louisville, KY 40202</p>
            </div>
        </div>
        <div class="col-12 mb-3 mt-3 p-0">
            <div class="col-12">
                Sales: 502-123-4567
            </div>
            <div class="col-12">
                Service: 502-987-6543 
            </div>
        </div>
    </div>
</div>

