@model IEnumerable<Exercises.Models.Data.Student>

@{
    ViewBag.Title = "List";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <h3>Student List</h3>
                <p>@Html.ActionLink("Add a Student", "Add", "Student", null, new { @class = "btn btn-primary" })</p>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Address</th>
                            <th>Major</th>
                            <th>GPA</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var student in Model)
                        {
                            <tr>
                                <td>@student.FirstName</td>
                                <td>@student.LastName</td>
                                <td>@Html.ActionLink("View Address", "StudentAddress", "Student", new { id = student.StudentId }, null)
                                </td>
                                <td>@student.Major.MajorName</td>
                                <td>@student.GPA</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", "Student", new { id=student.StudentId}, null)
                                </td>
                                <td>
                                    @using (Html.BeginForm("Delete", "Student", new { id = student.StudentId }, FormMethod.Post))
                                    {
                                        <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete @student.FirstName @student.LastName?');">Delete</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

