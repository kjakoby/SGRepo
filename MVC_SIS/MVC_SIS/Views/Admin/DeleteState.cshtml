@model Exercises.Models.Data.State

@{
    ViewBag.Title = "Delete State";
}

<div class="row">
    <div class="col-x-12">
        <h3>Delete State</h3>
        @Html.ActionLink("Return to List", "States", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m=>m.StateAbbreviation)
            <p>Are you sure that you wish to delete the state: <b>@Html.DisplayFor(m => m.StateName)</b>?</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "States", "Admin", null, new { @class="btn btn-sm btn-info"})
        }
    </div>
</div>


